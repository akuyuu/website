<!--preloads idk it works better this way -->
<link rel="preload" href="/fonts/zpix.woff" as="font" type="font/ttf" crossorigin fetchpriority="high" />
<link rel="preload" href="/fonts/zpix.woff2" as="font" type="font/ttf" crossorigin fetchpriority="high" />
