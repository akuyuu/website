---
interface Props {
  date: Date | undefined;
  last?: boolean;
}

const { date, last } = Astro.props;
---

{date ? (
  <time datetime={date.toISOString()}>
    {last === true ? (<br>
      <>&nbsp;last updated: </>
    ) : null}
    {date.toLocaleDateString('en-us', {
      year: 'numeric',
      month: 'short',
      day: 'numeric',
    })}
  </time>
) : null}